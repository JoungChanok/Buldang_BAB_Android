<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="7dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/Layout_0"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="15dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    tools:ignore="MissingPrefix">

                    <TextView
                        android:id="@+id/mDayOfTheWeek"
                        fontPath="fonts/NanumSquareB.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/mCalender"
                        android:layout_alignParentTop="true"
                        android:gravity="start"
                        android:paddingStart="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:textColor="#242424"
                        android:textSize="21sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/Today"
                        fontPath="fonts/BreezeSans-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="end"
                        android:paddingEnd="15dp"
                        android:textSize="15sp"
                        tools:ignore="RelativeOverlap,RtlSymmetry" />

                    <TextView
                        android:id="@+id/mCalender"
                        fontPath="fonts/NanumSquareB.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:paddingStart="15dp"
                        android:textColor="#242424"
                        android:textSize="14sp"
                        tools:ignore="RtlSymmetry" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Layout_1"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="8dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    tools:ignore="MissingPrefix">

                    <TextView
                        android:id="@+id/Lunch"
                        fontPath="fonts/BreezeSans-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/mLunch"
                        fontPath="fonts/NanumSquareL.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="30dp"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/Kcal"
                        fontPath="fonts/BreezeSans-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/mLunchKcal"
                        fontPath="fonts/BreezeSans-Thin.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Layout_2"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foreground="?attr/selectableItemBackground"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="8dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    tools:ignore="MissingPrefix">


                    <TextView
                        android:id="@+id/Dinner"
                        fontPath="fonts/BreezeSans-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/mDinner"
                        fontPath="fonts/NanumSquareL.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:padding="30dp"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/Kcal1"
                        fontPath="fonts/BreezeSans-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/mDinnerKcal"
                        fontPath="fonts/BreezeSans-Thin.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
